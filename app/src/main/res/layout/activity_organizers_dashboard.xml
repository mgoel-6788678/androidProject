<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizersDashboardActivity"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/organizer_dashboard"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/organizers_email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/organizers_add_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/organizer_create_event"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/organizers_show_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/organizer_show_events"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/organizers_mark_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mark_attendance"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/organizers_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:layout_marginTop="20dp"/>


</androidx.appcompat.widget.LinearLayoutCompat>